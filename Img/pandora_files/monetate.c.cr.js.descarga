monetate.c.cr({"data": " // Specific IDs\nfunction customizeBadgesForSpecificProducts() {\n  const productBadgeData = [\n    { ids: ['XXX'], badgeText: 'Gravable online' },\n    // { ids: ['798124EN16', '398914C00', '388914C00', '368611C00', '398611C00'], badgeText: 'Gravierbar' },\n    // Add more objects for other product ID groups and corresponding badge text\n  ];\n\n  const productElements = document.querySelectorAll('.product');\n\n  productElements.forEach(productElement => {\n    const dataPid = productElement.getAttribute('data-pid');\n\n    const productBadge = productBadgeData.find(item => item.ids.includes(dataPid));\n\n    if (productBadge) {\n      const badgesElement = productElement.querySelector('.badges');\n\n      if (badgesElement) {\n        badgesElement.innerHTML = productBadge.badgeText;\n        badgesElement.style.cssText = 'border: solid 0.01rem #e0e0e0;font-size: 9px; color: black; background-color: #f5f5f5; border-radius: 2px; line-height: 18px; padding: 0px 5px; width: fit-content; margin-top: 10px;';\n\n        const productPriceElement = productElement.querySelector('[data-auto=\"divPLPProductPrice\"]');\n        if (productPriceElement) {\n          productPriceElement.parentNode.insertBefore(badgesElement, productPriceElement.nextSibling);\n        }\n      }\n    }\n  });\n}\n\n\n// Function encapsulating the code for customizing badges\nfunction customizeBadgesForNEU() {\n  \n  \n    $(\"div.badges:contains(PRECIO ESPECIAL)\").css({\n    \"font-size\": \"9px\",\n    \"background-color\": \"white\",\n    \"border-radius\": \"2px\",\n    \"line-height\": \"18px\",\n    \"padding\": \"0rem 0.25rem\",\n    \"width\": \"fit-content\",\n    \"margin\": \"10px 0\",\n    \"color\":\"#c5003e\",\n    \"border\":\"solid 1px #c5003e\",\n  });\n  \n    $(\"div.badges:contains(PULSERA GRATIS)\").css({\n    \"font-size\": \"9px\",\n    \"background-color\": \"white\",\n    \"border-radius\": \"2px\",\n    \"line-height\": \"18px\",\n    \"padding\": \"0rem 0.25rem\",\n    \"width\": \"fit-content\",\n    \"margin\": \"10px 0\",\n    \"color\":\"#c5003e\",\n    \"border\":\"solid 1px #c5003e\",\n  });\n  \n    $(\"div.badges:contains(2 CHARMS + PULSERA)\").css({\n    \"font-size\": \"8px\",\n    //\"background-color\": \"#71706C\",\n    //\"background-color\": \"#d91f46\",\n    //\"background-color\": \"#c5003e\",\n    //\"background-color\": \" #71706C\",\n    \"background-color\": \"#71706C\",\n    \"border-radius\": \"2px\",\n    \"line-height\": \"18px\",\n    \"padding\": \"0rem 0.25rem\",\n    \"width\": \"fit-content\",\n    \"margin-top\": \"10px\",\n    \"color\":\"white\",\n  }); \n  \n  \n     $(\"div.badges:contains(EXCLUSIVO ONLINE)\").css({\n    \"font-size\": \"8px\",\n    //\"background-color\": \"#71706C\",\n    //\"background-color\": \"#d91f46\",\n    \"background-color\": \"#FFCAD4\",\n    \"border-radius\": \"2px\",\n    \"line-height\": \"18px\",\n    \"padding\": \"0rem 0.25rem\",\n    \"width\": \"fit-content\",\n    \"margin-top\": \"10px\",\n    \"color\":\"black\",\n  }); \n  \n       $(\"div.badges:contains(SET 3 JOYAS + ESTUCHE NAVIDAD)\").css({\n    \"font-size\": \"8px\",\n    //\"background-color\": \"#71706C\",\n    //\"background-color\": \"#d91f46\",\n    \"background-color\": \"#FFCAD4\",\n    \"border-radius\": \"2px\",\n    \"line-height\": \"18px\",\n    \"padding\": \"0rem 0.25rem\",\n    \"width\": \"fit-content\",\n    \"margin-top\": \"10px\",\n    \"color\":\"black\",\n  }); \n  \n       $(\"div.badges:contains(TENDENCIA EN REDES)\").css({\n    \"font-size\": \"8px\",\n    //\"background-color\": \"#71706C\",\n    //\"background-color\": \"#d91f46\",\n    \"background-color\": \"#FFCAD4\",\n    \"border-radius\": \"2px\",\n    \"line-height\": \"18px\",\n    \"padding\": \"0rem 0.25rem\",\n    \"width\": \"fit-content\",\n    \"margin-top\": \"10px\",\n    \"color\":\"black\",\n  }); \n  \n  $(\"div.badges:contains(REBAJAS)\").css({\n    \"font-size\": \"9px\",\n 