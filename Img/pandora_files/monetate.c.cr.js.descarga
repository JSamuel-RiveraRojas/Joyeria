 \n        // Insert the cloned badges element directly after the original badges element\n        badgesElement.parentNode.insertBefore(clonedBadgesElement, badgesElement.nextSibling);\n      }\n    }\n  });\n}\n \n \n// Function to bind event delegation for \"show-more\" button\nfunction bindShowMoreEvent() {\n  $('button.btn[data-auto=\"btnPLPShowMore\"]').off(\"click\").on(\"click\", function () {\n    setTimeout(function() {\n      customizeBadgesForSpecificProducts();\n      customizeBadgesForNEU();\n      bindShowMoreEvent(); // Rebind the event after each load\n      customizeSecondBadges();\n    }, 1500);\n  });\n}\n\n// Invoke the function when the environment is ready\n$(document).ready(function() {\n  customizeBadgesForSpecificProducts();\n  customizeBadgesForNEU(); // Initially customize badges\n  bindShowMoreEvent(); // Bind event for \"show-more\" button\n  customizeSecondBadges();\n});\n", "ref": "1047/5532631.js"});